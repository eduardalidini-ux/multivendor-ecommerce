# Backend environment variables (example)
# Copy to `.env` and fill with real values.

# Django/Frontend site URL
SITE_URL=http://localhost:5173

# Database (Supabase Postgres)
# Use the Transaction Pooler connection string from Supabase.
# Example format:
# postgresql://<user>:<password>@<host>:<port>/<db>
DATABASE_URL=postgresql://postgres.USERNAME:PASSWORD@aws-1-eu-west-1.pooler.supabase.com:6543/postgres

# If your Supabase connection requires SSL (usually yes)
DB_SSL_REQUIRE=True

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Email (SMTP - Gmail example)
# IMPORTANT (Gmail): enable 2-Step Verification and create an "App Password".
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_TIMEOUT=15
DEFAULT_FROM_EMAIL=
FROM_EMAIL=
SERVER_EMAIL=

# Mailgun (optional / legacy)
MAILGUN_API_KEY=
MAILGUN_SENDER_DOMAIN=

# Supabase Storage (S3-compatible) - will be used later for media
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_ENDPOINT_URL=
AWS_S3_REGION_NAME=eu-west-1
