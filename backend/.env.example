# Backend environment variables (example)
# Copy to `.env` and fill with real values.

# Django/Frontend site URL
SITE_URL=http://localhost:5173

# Database (Supabase Postgres)
# Use the Transaction Pooler connection string from Supabase.
# Example format:
# postgresql://<user>:<password>@<host>:<port>/<db>
DATABASE_URL=postgresql://postgres.USERNAME:PASSWORD@aws-1-eu-west-1.pooler.supabase.com:6543/postgres

# If your Supabase connection requires SSL (usually yes)
DB_SSL_REQUIRE=True

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Email (Brevo Transactional Email API)
# Generate an API key in Brevo: Settings -> API Keys
BREVO_API_KEY=
BREVO_SENDER_EMAIL=
BREVO_SENDER_NAME=

BREVO_TIMEOUT=15

# Supabase Storage (S3-compatible) - will be used later for media
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_ENDPOINT_URL=
AWS_S3_REGION_NAME=eu-west-1
